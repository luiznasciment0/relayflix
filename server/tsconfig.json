{
  "compilerOptions": {
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": ".",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
